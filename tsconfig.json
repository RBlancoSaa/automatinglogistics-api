{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",              
    "paths": {
      "*": ["api/*", "src/*", "*"]
    }
  },
  "include": ["api/**/*", "src/**/*"],
  "exclude": ["dist", "node_modules"]
}
